package br.com.healthsolu.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;
import br.com.fiap.healthsolu.exception.BadInfoException;
import br.com.healthsolu.model.Login;

public class LoginDao {
	
	private Connection conn;
	
	public LoginDao(Connection conn) {
		super();
		this.conn = conn;
	}

	public void cadastrar(Login login) throws ClassNotFoundException, SQLException, BadInfoException {
		PreparedStatement stmm = conn.prepareStatement("select * from t_sip_credenciais_usuario");

		ResultSet resultGet = stmm.executeQuery();

		List<Login> lista = new ArrayList<Login>();

		int id = 0;
	
		while (resultGet.next()) {
			Login loginGet = parse(resultGet);
			lista.add(loginGet);
		}
		if(lista.size() == 0) {
			 id = 1;
		}
		id = lista.size() + 1;
		
		PreparedStatement stm = conn.prepareStatement("INSERT INTO t_sip_credenciais_usuario (ID_CREDENCIAIS_USUARIO, NM_USUARIO,"
				+ "EMAIL, SENHA) "
				+ "values (?, ?, ?, ?)");

		stm.setInt(1, id);
		stm.setString(2, login.getNome());
		stm.setString(3, login.getEmail());
		stm.setString(4, login.getSenha());
		
		stm.executeUpdate();
	}
	
	private Login parse(ResultSet result) throws SQLException {
		int id = result.getInt("ID_CREDENCIAIS_USUARIO");
		String nome = result.getString("NM_USUARIO");
		String email = result.getString("EMAIL");
		String senha = result.getString("data_chamado");
		
		Login usuario = new Login(id,nome,email,senha);
		
		return usuario;
	}
	
	public List<Login> listar() throws ClassNotFoundException, SQLException {

		PreparedStatement stm = conn.prepareStatement("select * from t_sip_credenciais_usuario");

		ResultSet result = stm.executeQuery();

		List<Login> lista = new ArrayList<Login>();

		while (result.next()) {
			Login login = parse(result);
			lista.add(login);
		}
		return lista;
	}
	
	
	
}
