package br.com.healthsolu.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;
import br.com.fiap.healthsolu.exception.BadInfoException;
import br.com.healthsolu.model.Login;

public class LoginDao {
	
	private Connection conn;
	
	public LoginDao(Connection conn) {
		super();
		this.conn = conn;
	}

	public void cadastrar(Login login) throws ClassNotFoundException, SQLException, BadInfoException {
		PreparedStatement stmm = conn.prepareStatement("select * from T_SIP_USUARIO");

		ResultSet resultGet = stmm.executeQuery();

		List<Login> lista = new ArrayList<Login>();

		int id = 0;
	
		while (resultGet.next()) {
			Login loginGet = parse(resultGet);
			lista.add(loginGet);
		}
		if(lista.size() == 0) {
			 id = 1;
		}
		id = lista.size() + 1;
		
		PreparedStatement stm = conn.prepareStatement("INSERT INTO T_SIP_USUARIO (ID_USUARIO, ID_CONTATO_USUARIO,"
				+ "ID_ENDERECO_USUARIO, NM_COMPLETO,EMAIL,SENHA,IDADE,PESO,ALTURA,SEXO) "
				+ "values (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)");

		stm.setInt(1, id);
		stm.setInt(2, login.getContatoUsuario().getId());
		stm.setInt(3, login.getEnderecoUsuario().getId());
		stm.setString(4, login.getNome());
		stm.setString(5, login.getEmail());
		stm.setString(6, login.getSenha());
		stm.setInt(7, login.getIdade());
		stm.setDouble(8, login.getPeso());
		stm.setDouble(9, login.getAltura());
		stm.setString(10, login.getSexo());
		
		stm.executeUpdate();
	}
	
	private Login parse(ResultSet result) throws SQLException {
		int id = result.getInt("ID_USUARIO");
		int idContatoUsuario = result.getString("ID_CONTATO_USUARIO");
		int idEnderecoUsuario = result.getString("ID_ENDERECO_USUARIO");
		String nome = result.getString("NM_COMPLETO");
		String email = result.getString("EMAIL");
		String senha = result.getString("SENHA");
		int idade = result.getString("IDADE");
		String peso = result.getString("PESO");
		String altura = result.getString("ALTURA");
		String sexo = result.getString("SEXO");
		
		Login usuario = new Login(id,nome,email,senha,idade,peso,altura,sexo);
		
		if (idSegurado != 0) {
			Segurado segurado = new Segurado();
			segurado.setId(idSegurado);
			chamado.setSegurado(segurado);
		}
		if (idEnderecoChamado != 0) {
			EnderecoChamado enderecoChamado = new EnderecoChamado();
			enderecoChamado.setId(idEnderecoChamado);
			chamado.setEnderecoChamado(enderecoChamado);
		}
		
		return usuario;
	}
	
	public List<Login> listar() throws ClassNotFoundException, SQLException {

		PreparedStatement stm = conn.prepareStatement("select * from T_SIP_USUARIO");

		ResultSet result = stm.executeQuery();

		List<Login> lista = new ArrayList<Login>();

		while (result.next()) {
			Login login = parse(result);
			lista.add(login);
		}
		return lista;
	}
	
	
	
}
